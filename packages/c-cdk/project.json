{
  "name": "c-cdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/c-cdk/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/c-cdk",
        "main": "packages/c-cdk/src/index.ts",
        "tsConfig": "packages/c-cdk/tsconfig.lib.json",
        "assets": ["packages/c-cdk/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/c-cdk/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/c-cdk/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
